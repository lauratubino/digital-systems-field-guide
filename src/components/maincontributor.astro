---
import { LinkCard, Card } from "@astrojs/starlight/components";
import { Image } from "astro:assets";

const { name, affiliation, desc, imgUrl, tag, twitter, website } = Astro.props;
---

<style>
  p {
    font-family: "antique-olive", cursive, sans-serif;
    margin-bottom: 10px;
    margin-top: 10px;
    line-height: normal;
  }

  .tag {
    font-family: "antique-olive", cursive, sans-serif;
    color: #247f00;
    font-style: bold;
    margin-top: -10px;
    margin-bottom: -10px;
  }

  html[data-theme="dark"] img {
    filter: invert(1);
  }
</style>

<Card title={name}>
  <p class="tag">{tag}</p>
  <Image
    height="200"
    src={import(`../assets/illustrations/${imgUrl}.png`)}
    alt={"Illustration of " + name}
  />
  <p>{desc}</p>
  { website ? <LinkCard title="Website" href={website} /> : null }
  { twitter ? <LinkCard title="Twitter" href={twitter} /> : null }
</Card>
